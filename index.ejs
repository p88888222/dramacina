<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Melolo Web</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .tab-content { display: none; }
        .tab-content.active { display: block; }
        .tab-btn.active { color: #3b82f6; border-bottom: 2px solid #3b82f6; }
        .no-scrollbar::-webkit-scrollbar { display: none; }
    </style>
</head>
<body class="bg-black text-white">

    <nav class="sticky top-0 bg-black/95 p-4 border-b border-gray-800 flex justify-around font-bold z-50">
        <button onclick="openTab('home')" class="tab-btn active px-4 py-2" id="btn-home">Home</button>
        <button onclick="openTab('hot')" class="tab-btn px-4 py-2" id="btn-hot">Hot</button>
        <button onclick="openTab('foryou')" class="tab-btn px-4 py-2" id="btn-foryou">For You</button>
    </nav>

    <div id="home" class="tab-content active p-4 space-y-8">
        <section>
            <h2 class="text-lg font-bold mb-4 pl-2 border-l-4 border-blue-500">Drama Terbaru</h2>
            <div class="flex overflow-x-auto gap-4 no-scrollbar">
                <% latest.forEach(book => { %>
                    <a href="/detail/<%= book.book_id %>" class="min-w-[140px] bg-gray-900 rounded-lg overflow-hidden">
                        <img src="<%= book.thumb || book.cover_url %>" class="w-full aspect-[3/4] object-cover" onerror="this.src='https://via.placeholder.com/150x200?text=No+Image'">
                        <p class="p-2 text-[10px] leading-tight h-10 line-clamp-2"><%= book.book_name %></p>
                    </a>
                <% }) %>
            </div>
        </section>

        <section>
            <h2 class="text-lg font-bold mb-4 pl-2 border-l-4 border-red-500">Paling Populer</h2>
            <div class="grid grid-cols-2 gap-4">
                <% trending.slice(0, 4).forEach(book => { %>
                    <a href="/detail/<%= book.book_id %>" class="relative rounded-lg overflow-hidden aspect-video">
                        <img src="<%= book.thumb || book.cover_url %>" class="w-full h-full object-cover opacity-60">
                        <div class="absolute bottom-0 p-2 bg-gradient-to-t from-black w-full">
                            <p class="text-xs font-bold truncate"><%= book.book_name %></p>
                        </div>
                    </a>
                <% }) %>
            </div>
        </section>
    </div>

    <div id="hot" class="tab-content p-4">
        <div class="grid grid-cols-3 gap-2">
            <% trending.forEach(book => { %>
                <a href="/detail/<%= book.book_id %>" class="bg-gray-900 rounded overflow-hidden">
                    <img src="<%= book.thumb || book.cover_url %>" class="w-full aspect-[3/4] object-cover">
                    <p class="p-1 text-[9px] truncate"><%= book.book_name %></p>
                </a>
            <% }) %>
        </div>
    </div>

    <div id="foryou" class="tab-content p-4">
        <% let shuffle = [...trending].sort(() => Math.random() - 0.5); %>
        <div class="space-y-4">
            <% shuffle.forEach(book => { %>
                <a href="/detail/<%= book.book_id %>" class="flex gap-4 bg-gray-900 p-2 rounded-lg">
                    <img src="<%= book.thumb || book.cover_url %>" class="w-20 h-28 object-cover rounded">
                    <div class="flex-1">
                        <h4 class="font-bold text-sm text-blue-400"><%= book.book_name %></h4>
                        <p class="text-[10px] text-gray-400 line-clamp-3 mt-1"><%= book.abstract %></p>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>

    <script>
        function openTab(name) {
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(name).classList.add('active');
            document.getElementById('btn-' + name).classList.add('active');
            window.scrollTo(0,0);
        }
    </script>
</body>
</html>

