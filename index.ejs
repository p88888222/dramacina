<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Melolo WebApp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .tab-content { display: none; }
        .tab-content.active { display: block; }
        .tab-btn.active { color: #60a5fa; border-bottom: 2px solid #60a5fa; }
        .no-scrollbar::-webkit-scrollbar { display: none; }
    </style>
</head>
<body class="bg-black text-gray-100 font-sans">

    <nav class="sticky top-0 bg-black/90 backdrop-blur-md p-4 border-b border-gray-800 flex justify-around font-bold z-50">
        <button onclick="openTab('home')" class="tab-btn active transition-all" id="btn-home">HOME</button>
        <button onclick="openTab('hot')" class="tab-btn transition-all" id="btn-hot">HOT</button>
        <button onclick="openTab('foryou')" class="tab-btn transition-all" id="btn-foryou">FOR YOU</button>
    </nav>

    <div id="home" class="tab-content active p-4 space-y-6">
        <section>
            <h2 class="text-lg font-bold mb-3 border-l-4 border-blue-500 pl-2">Drama Terbaru</h2>
            <div class="flex overflow-x-auto gap-3 no-scrollbar">
                <% latest.forEach(book => { %>
                    <a href="/detail/<%= book.book_id %>" class="min-w-[130px] bg-gray-900 rounded-lg overflow-hidden shrink-0">
                        <img src="<%= book.thumb_url %>" class="w-full aspect-[3/4] object-cover" loading="lazy">
                        <p class="p-2 text-[11px] font-medium line-clamp-2 h-10"><%= book.book_name %></p>
                    </a>
                <% }) %>
            </div>
        </section>

        <section>
            <h2 class="text-lg font-bold mb-3 border-l-4 border-red-500 pl-2">Lagi Trending</h2>
            <div class="grid grid-cols-2 gap-3">
                <% trending.slice(0, 4).forEach(book => { %>
                    <a href="/detail/<%= book.book_id %>" class="relative rounded-lg overflow-hidden aspect-video bg-gray-900">
                        <img src="<%= book.thumb_url %>" class="w-full h-full object-cover opacity-70">
                        <div class="absolute bottom-0 p-2 bg-gradient-to-t from-black w-full">
                            <p class="text-[11px] font-bold truncate"><%= book.book_name %></p>
                        </div>
                    </a>
                <% }) %>
            </div>
        </section>
    </div>

    <div id="hot" class="tab-content p-4">
        <div class="grid grid-cols-3 gap-2">
            <% trending.forEach(book => { %>
                <a href="/detail/<%= book.book_id %>" class="bg-gray-900 rounded overflow-hidden shadow-lg">
                    <img src="<%= book.thumb_url %>" class="w-full aspect-[3/4] object-cover">
                    <p class="p-1.5 text-[10px] truncate"><%= book.book_name %></p>
                </a>
            <% }) %>
        </div>
    </div>

    <div id="foryou" class="tab-content p-4">
        <% let shuffle = [...trending].sort(() => Math.random() - 0.5); %>
        <div class="space-y-4">
            <% shuffle.forEach(book => { %>
                <a href="/detail/<%= book.book_id %>" class="flex gap-4 bg-gray-900/50 p-2 rounded-xl border border-gray-800">
                    <img src="<%= book.thumb_url %>" class="w-24 h-32 object-cover rounded-lg shadow-lg">
                    <div class="flex-1 py-1">
                        <h4 class="font-bold text-sm text-blue-400 line-clamp-1"><%= book.book_name %></h4>
                        <p class="text-[11px] text-gray-400 line-clamp-3 mt-1 leading-relaxed">
                            <%= book.abstract %>
                        </p>
                        <div class="mt-2 text-[9px] text-gray-500 uppercase tracking-widest">Recommended</div>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>

    <script>
        function openTab(name) {
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            document.getElementById(name).classList.add('active');
            document.getElementById('btn-' + name).classList.add('active');
            window.scrollTo(0, 0);
        }
    </script>
</body>
</html>

